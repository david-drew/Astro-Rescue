	  "interval_seconds": 0.05,
	  "max_delta_seconds": 0.2,
	  "enabled": true
	},
	"world_sim": {
	  "interval_seconds": 5.0,
	  "max_delta_seconds": 2.0,
	  "enabled": true
	}
  }
}
